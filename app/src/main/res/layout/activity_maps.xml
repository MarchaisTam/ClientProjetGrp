<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    tools:context=".MapsActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_veloDispo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VÃ©lo disponible" />

            <CheckBox
                android:id="@+id/cb_placeDispo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Place disponible" />
        </LinearLayout>

        <Button
            android:id="@+id/btGetBikeStations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toutes les stations" />

        <Button
            android:id="@+id/btGetNearestBikeStations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Station la plus proche" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="message d'erreur"
            android:textSize="20sp"
            android:visibility="invisible"
            tools:visibility="visible" />
    </LinearLayout>

</LinearLayout>